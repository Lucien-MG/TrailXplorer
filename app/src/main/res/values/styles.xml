<resources>

    <!-- Light application theme. -->
    <style name="LightAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#FFFFFF</item>
        <item name="cardbackground">#0A71B1</item>
        <item name="titlecolor">#FCFCFC</item>
        <item name="textcolor1">#34ACF4</item>
        <item name="textcolor2">#808080</item>
        <item name="tintcolor">#000000</item>
        <item name="buttoncolor">#0A71B1</item>
        <item name="colorControlActivated">#0A71B1</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Dark application theme. -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#101922</item>
        <item name="cardbackground">#0A71B1</item>
        <item name="titlecolor">#FCFCFC</item>
        <item name="textcolor1">#FCFCFC</item>
        <item name="textcolor2">#808080</item>
        <item name="tintcolor">#FFFFFF</item>
        <item name="buttoncolor">#0A71B1</item>
        <item name="colorControlActivated">#0A71B1</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Animation Style -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Light Alert Dialog. -->
    <style name="LightAlertDialog" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">#808080</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#808080</item>
        <item name="android:textColorSecondary">#808080</item>
    </style>

    <!-- Dark Alert Dialog. -->
    <style name="DarkAlertDialog" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorBackground">#00000A</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

</resources>
